{
  "name": "backend-mms",
  "version": "1.2.0",
  "description": "",
  "main": "./src/start-app.ts",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "start": "node ./dist/src/start-app.js",
    "start-dev": "npm run build && node -r dotenv/config ./dist/src/start-app.js",
    "build": "rimraf dist && tsc -p ./tsconfig-build.json",
    "build:watch": "rimraf dist && tsc -p ./tsconfig-build.json -w",
    "debug": "npx nodemon -L --watch ./dist --inspect=0.0.0.0:9303 --nolazy ./dist/src/start-app.js",
    "dev": "ts-node-dev -r tsconfig-paths/register ./src/start-app.ts --transpile-only --files",
    "up": "npm run build && docker compose up -d",
    "down": "docker compose down",
    "watch": "npx tsc -p ./tsconfig.json -w",
    "test": "jest --runInBand",
    "test:clean": "jest --clear-cache",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:coverage": "npm test -- --coverage",
    "jest:debug": "node --nolazy --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --colors --verbose",
    "build:docker": "docker build -t lucaslui/backend-image-repository .",
    "push:docker": "docker push lucaslui/backend-image-repository",
    "check": "npm-check -s -u"
  },
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.4.0",
    "@types/mongodb": "^3.6.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^14.14.20",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^4.3.7",
    "jest": "^29.4.3",
    "lint-staged": "^10.5.3",
    "rimraf": "^3.0.2",
    "sucrase": "^3.17.0",
    "supertest": "^6.3.3",
    "testcontainers": "^9.1.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.17.3",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "mongodb": "^3.6.3",
    "multer": "^1.4.4",
    "nodemailer": "^6.9.1",
    "swagger-ui-express": "^4.3.0",
    "uuid": "^8.3.2",
    "validator": "^13.9.0"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
